#            proxy_redirect off;
#
#            if (!-f $request_filename) {
#                proxy_pass http://homesite;
#                break;
#            }
#        }


        location /media {
            root /opt/2.0/flxweb/flxweb/public;
            expires 31d;
        }

        error_page 500 502 503 504 /500.html;
        location = /500.html {
            root /path/to/app/current/public;
        }

