## Place this file (or symlink it) under /etc/default/celeryd-auth
# Where to chdir at start.
CELERYD_CHDIR="/opt/2.0/flx/pylons/auth"
[ -f "/opt/env/auth/bin/celeryd" ] && CELERYD_BIN="/opt/env/auth/bin/celeryd"

# Extra arguments to celeryd
#CELERYD_OPTS_GRP1="--queues vcs -c 1"
CELERYD_OPTS_GRP1="--queues data-auth -c 1 -B --schedule=/var/run/celery/celerybeat-auth-schedule"

CELERYD_LOG_FILE="/var/log/celery/celeryd-auth-_n.log"

CELERYD_LOG_LEVEL="INFO"

# Workers should run as an unprivileged user.
CELERYD_USER=`grep -s APACHE_RUN_USER /etc/apache2/envvars |sed 's/export APACHE_RUN_USER=//'`
CELERYD_USER=${CELERYD_USER:-www-data}
CELERYD_GROUP=`grep -s APACHE_RUN_GROUP /etc/apache2/envvars |sed 's/export APACHE_RUN_GROUP=//'`
CELERYD_GROUP=${CELERYD_GROUP:-www-data}

# PAth to celeryd
#CELERYD="/usr/local/bin/paster celeryd celeryconfig.py"

# Name of the celery config module.#
CELERY_CONFIG_MODULE="celeryconfig-auth"
