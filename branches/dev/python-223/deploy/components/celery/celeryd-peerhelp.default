## Place this file (or symlink it) under /etc/default/celeryd-peerhelp
# Where to chdir at start.
CELERYD_BIN="/usr/local/bin/celeryd"
[ -f "/opt/env/peerhelp/bin/celeryd" ] && CELERYD_BIN="/opt/env/peerhelp/bin/celeryd"
CELERYD_CHDIR="/opt/2.0/peerhelp/core/pyramid"

# Name of the celery config module.#
CELERY_CONFIG_MODULE="celeryconfig-peerhelp"

# Extra arguments to celeryd
CELERYD_OPTS_GRP1="--queues peerhelp-flx-notify,epeerhelp,collections -c 3 --config=${CELERY_CONFIG_MODULE}"
re='[^0-9]+$'
THIS_HOST="$(hostname)"
THIS_HOST="${THIS_HOST%%.ck12.org}"
if [ "${THIS_HOST%%1}" != "${THIS_HOST}" ] || [[ ${THIS_HOST} =~ ${re} ]]; then
    CELERYD_OPTS_GRP1="${CELERYD_OPTS_GRP1} -B --schedule=/var/run/celery/celerybeat-peerhelp-schedule"
fi

CELERYD_LOG_FILE="/var/log/celery/celeryd-peerhelp-_n.log"

CELERYD_LOG_LEVEL="INFO"

# Workers should run as an unprivileged user.
CELERYD_USER=`grep -s APACHE_RUN_USER /etc/apache2/envvars |sed 's/export APACHE_RUN_USER=//'`
CELERYD_USER=${CELERYD_USER:-www-data}
CELERYD_GROUP=`grep -s APACHE_RUN_GROUP /etc/apache2/envvars |sed 's/export APACHE_RUN_GROUP=//'`
CELERYD_GROUP=${CELERYD_GROUP:-www-data}

