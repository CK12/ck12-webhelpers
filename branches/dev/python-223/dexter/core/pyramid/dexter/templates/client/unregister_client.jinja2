<html>
    <head>
        <title>Unregister Client</title>
    </head>
    <body>
        <form name="Client Data" method="POST" action="/dexter/unregister/client">
            <h4>&nbsp;Select a Client to un-register</h4>
            <table>
                 <tr>
                    <td> 
                      <select name="clientID">
                        {% for eachClient in clients %}
                        <option value="{{ eachClient.clientID }}">{{ eachClient.name }}</option>
                        {% endfor %}
                      </select>
                    </td>
                    <td>
                        <input type="submit" name="submit" value="Unregister" />
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>

