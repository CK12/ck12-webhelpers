{
    "rules": {
        "indent": [2,2],
        "quotes": [2,"single"],
        "linebreak-style": [2,"unix"],
        "semi": [2,"always"],
        "react/jsx-uses-vars": 1,
        "no-console": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "modules": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
        }
    },
    "plugins": [
        "react"
    ],
    {
      "settings": {
        "react": {
          "pragma": "React",  // Pragma to use, default to "React"
        }
      }
    }
}
